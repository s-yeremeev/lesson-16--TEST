{
  "presets": [
    "es2015",
    "stage-0",
    "stage-1",
    "stage-2",
    "flow"
  ],
  "plugins": [
    [
      "transform-runtime", 
      {
        "helpers": false,
        "polyfill": "babel-polyfill",
        "regenerator": true,
        "moduleName": "babel-runtime"
      }
    ],
    "transform-flow-strip-types"
  ],
  "env": {
    "test": {
      "plugins": ["istanbul"]
    }
  }
}